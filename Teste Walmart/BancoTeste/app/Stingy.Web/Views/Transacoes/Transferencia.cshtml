@model Stingy.Web.Models.TransacoesViewModel
@{
    ViewBag.Title = "Transferencia";
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    if (ViewBag.msg != null)
    {
    <div style="color: red; font-size: 16px">
        @ViewBag.msg
    </div>
    }
    <fieldset>
        <legend>Transferencia</legend>
        <table>
            <tr>
                <td>
                    <div class="editor-label">
                        @Html.LabelFor(model => model.ContaOrigem.NumeroConta)
                    </div>
                </td>
                <td>
                    <div class="editor-label">
                        @Html.LabelFor(model => model.ContaDestino.NumeroConta)
                    </div>
                </td>
            </tr>
            <tr>
                <td>
                    <div class="editor-field">
                        @Html.DropDownListFor(model => model.IdContaOrigem, new SelectList(Model.ContasOrigem, "Id", "NumeroConta"))
                        @Html.ValidationMessageFor(model => model.IdContaOrigem)
                    </div>
                </td>
                <td>
                    <div class="editor-field">
                        @Html.DropDownListFor(model => model.IdContaDestino, new SelectList(Model.ContasDestino, "Id", "NumeroConta"))
                        @Html.ValidationMessageFor(model => model.IdContaDestino)
                    </div>
                </td>
            </tr>
        </table>
        <div class="editor-label">
            @Html.LabelFor(model => model.Valor)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Valor)
            @Html.ValidationMessageFor(model => model.Valor)
        </div>
        <p>
            <input type="submit" value="Transferencia" />
        </p>
    </fieldset>
}
<div>
    @Html.ActionLink("Listar transações", "Index")
</div>
